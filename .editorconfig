# EditorConfig is awesome: https://EditorConfig.org

# 根配置
root = true

# 所有文件的通用配置
[*]
indent_style = space   # 使用空格缩进
indent_size = 2        # 缩进为 2 个空格
end_of_line = lf       # 使用 Unix 换行符
charset = utf-8        # 文件编码为 UTF-8
trim_trailing_whitespace = true  # 去除行尾多余的空格
insert_final_newline = true      # 文件末尾添加换行符

# 针对 Markdown 文件的特殊配置
[*.md]
trim_trailing_whitespace = false  # 保留 Markdown 文件中的行尾空格
